<html lang="en">
  <body>
    <section>
      <!--for demo wrap-->
      <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
          <thead>
            <tr>
              <th>Name</th>
              <th>Price</th>
              <th>Quantity</th>
              <th>Feature</th>
              <th>Video</th>
              <th>Image</th>
              <th><a class="btn btn-secondary" href="/add">Add</a></th>
              <th></th>
            </tr>
          </thead>
        </table>
      </div>
      <div class="tbl-content">
        <table cellpadding="0" cellspacing="0" border="0">
          {{#each toyGallerys}}
            <tbody>
              <tr>
                <td>{{name}}</td>
                <td>{{price}} $</td>
                <td>{{quantity}}</td>
                <td>{{cate}}</td>
                <td><iframe
                    width="200"
                    height="350"
                    src="{{vid}}"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                  ></iframe></td>
                <td><img src="{{img}}" alt="" class="image" /></td>
                <td><a
                    class="btn btn-secondary"
                    href="/edit/{{_id}}"
                  >Edit</a></td>
                <td><a
                    class="btn btn-danger"
                    href="/delete/{{_id}}"
                    onclick="return confirm('Are you sure about it ?')"
                  >Delete</a></td>
              </tr>
            </tbody>
          {{/each}}
        </table>
      </div>
    </section>

    <!-- follow me template -->
