<div class="container text-center  mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/add" method="post">
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Name</label>
         <input class="form-control" type="text" name="name" required minlength="3" maxlength="30">
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Price</label>
         <input class="form-control" type="number" name="price" required >
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Image</label>
            <input class="form-control" type="text" name="img" required>
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Quantity</label>
            <input class="form-control" type="text" name="quantity" required min= "1" max= "20"> 
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Cate</label>
            <input class="form-control" type="text" name="cate" required>
      </div>
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Video</label>
            <input class="form-control" type="text" name="vid" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Add">
      </div>
   </form>
</div>